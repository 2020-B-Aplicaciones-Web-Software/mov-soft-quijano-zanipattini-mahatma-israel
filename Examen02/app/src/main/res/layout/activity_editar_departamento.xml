<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.departamento.EditarDepartamento">

    <EditText
        android:id="@+id/txt_nuevoValorDpto"
        android:layout_width="159dp"
        android:layout_height="42dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/txt_nuevaAreaDpto"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_nuevaAreaDpto"
        app:layout_constraintTop_toBottomOf="@+id/txt_nuevaAreaDpto" />

    <EditText
        android:id="@+id/txt_nuevaAreaDpto"
        android:layout_width="113dp"
        android:layout_height="43dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/txt_nuevoNumBan"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_nuevoNumBan"
        app:layout_constraintTop_toBottomOf="@+id/txt_nuevoNumBan" />

    <EditText
        android:id="@+id/txt_nuevoNumBan"
        android:layout_width="80dp"
        android:layout_height="44dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/txt_nuevoNumHab"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/txt_nuevoNumHab"
        app:layout_constraintTop_toBottomOf="@+id/txt_nuevoNumHab" />

    <EditText
        android:id="@+id/txt_nuevoNumHab"
        android:layout_width="79dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/txt_nuevoNombreDpto"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_nuevoNombreDpto"
        app:layout_constraintTop_toBottomOf="@+id/txt_nuevoNombreDpto" />

    <EditText
        android:id="@+id/txt_nuevoNombreDpto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.104" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valor ($):"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/txt_nuevoValorDpto"
        app:layout_constraintEnd_toStartOf="@+id/txt_nuevoValorDpto"
        app:layout_constraintTop_toTopOf="@+id/txt_nuevoValorDpto" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Área (m2):"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/txt_nuevaAreaDpto"
        app:layout_constraintEnd_toStartOf="@+id/txt_nuevaAreaDpto"
        app:layout_constraintTop_toTopOf="@+id/txt_nuevaAreaDpto" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Número de baños:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/txt_nuevoNumBan"
        app:layout_constraintEnd_toStartOf="@+id/txt_nuevoNumBan"
        app:layout_constraintTop_toTopOf="@+id/txt_nuevoNumBan" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Número de habitaciones:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/txt_nuevoNumHab"
        app:layout_constraintEnd_toStartOf="@+id/txt_nuevoNumHab"
        app:layout_constraintTop_toTopOf="@+id/txt_nuevoNumHab" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/txt_nuevoNombreDpto"
        app:layout_constraintEnd_toStartOf="@+id/txt_nuevoNombreDpto"
        app:layout_constraintTop_toTopOf="@+id/txt_nuevoNombreDpto" />

    <Button
        android:id="@+id/btn_regresarEditarDpto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Regresar"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/btn_editarDepartamento"
        app:layout_constraintStart_toStartOf="@+id/btn_editarDepartamento"
        app:layout_constraintTop_toBottomOf="@+id/btn_editarDepartamento" />

    <Button
        android:id="@+id/btn_editarDepartamento"
        android:layout_width="132dp"
        android:layout_height="47dp"
        android:layout_marginTop="56dp"
        android:text="Actualizar"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txt_nuevoValorDpto"
        app:layout_constraintHorizontal_bias="0.223"
        app:layout_constraintStart_toStartOf="@+id/textView17"
        app:layout_constraintTop_toBottomOf="@+id/txt_nuevoValorDpto" />
</androidx.constraintlayout.widget.ConstraintLayout>