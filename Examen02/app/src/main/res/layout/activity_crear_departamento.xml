<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.departamento.CrearDepartamento">

    <Button
        android:id="@+id/btn_crearDepartamento"
        android:layout_width="99dp"
        android:layout_height="49dp"
        android:layout_marginTop="56dp"
        android:text="Crear"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txt_Longitud"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="@+id/txt_Longitud"
        app:layout_constraintTop_toBottomOf="@+id/txt_Longitud" />

    <Button
        android:id="@+id/btn_regresarDepartamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="Regresar"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/btn_crearDepartamento"
        app:layout_constraintStart_toEndOf="@+id/btn_crearDepartamento"
        app:layout_constraintTop_toTopOf="@+id/btn_crearDepartamento"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/txt_nombreDpto"
        android:layout_width="253dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="Nombre del departamento"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.055" />

    <EditText
        android:id="@+id/txt_numHab"
        android:layout_width="255dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Número de habitaciones"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/txt_nombreDpto"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_nombreDpto"
        app:layout_constraintTop_toBottomOf="@+id/txt_nombreDpto" />

    <EditText
        android:id="@+id/txt_numBan"
        android:layout_width="255dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Número de baños"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/txt_numHab"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_numHab"
        app:layout_constraintTop_toBottomOf="@+id/txt_numHab" />

    <EditText
        android:id="@+id/txt_areaDpto"
        android:layout_width="255dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Área (m²)"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/txt_numBan"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_numBan"
        app:layout_constraintTop_toBottomOf="@+id/txt_numBan" />

    <EditText
        android:id="@+id/txt_valorDpto"
        android:layout_width="255dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Valor ($)"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/txt_areaDpto"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_areaDpto"
        app:layout_constraintTop_toBottomOf="@+id/txt_areaDpto" />

    <EditText
        android:id="@+id/txt_latitud"
        android:layout_width="255dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Latitud"
        android:inputType="numberSigned|numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/txt_valorDpto"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_valorDpto"
        app:layout_constraintTop_toBottomOf="@+id/txt_valorDpto" />

    <EditText
        android:id="@+id/txt_Longitud"
        android:layout_width="256dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Longitud"
        android:inputType="numberSigned|numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/txt_latitud"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_latitud"
        app:layout_constraintTop_toBottomOf="@+id/txt_latitud" />

</androidx.constraintlayout.widget.ConstraintLayout>