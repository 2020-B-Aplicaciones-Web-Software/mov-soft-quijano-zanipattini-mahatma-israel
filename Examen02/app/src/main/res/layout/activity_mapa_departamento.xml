<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.departamento.MapaDepartamento">

    <TextView
        android:id="@+id/tv_nombreDepartamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre Departamento"
        android:textColor="#673AB7"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.063" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="350dp"
        android:layout_height="395dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_regresarAListarDepartamentos"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_centrarMapa"
        app:layout_constraintTop_toBottomOf="@+id/btn_regresarAListarDepartamentos"
        tools:context=".view.departamento.MapsFragment"
        tools:layout="@layout/fragment_maps" />

    <Button
        android:id="@+id/btn_centrarMapa"
        android:layout_width="171dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:text="Centrar mapa"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nombreDepartamento" />

    <Button
        android:id="@+id/btn_regresarAListarDepartamentos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:text="Regresar"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/btn_centrarMapa"
        app:layout_constraintStart_toEndOf="@+id/btn_centrarMapa"
        app:layout_constraintTop_toTopOf="@+id/btn_centrarMapa"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>